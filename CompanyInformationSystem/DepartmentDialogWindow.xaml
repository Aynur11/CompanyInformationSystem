<Window x:Class="CompanyInformationSystem.DepartmentDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompanyInformationSystem"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Height="203.734" Width="295.947">
    <Grid>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="23" Margin="20,53,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="244" GotFocus="NameTextBox_OnGotFocus"/>
        <Label Content="Введите имя департамента" HorizontalAlignment="Left" Margin="50,11,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonOk" Content="ОК" HorizontalAlignment="Left" Height="34" Margin="33,104,0,0" VerticalAlignment="Top" Width="82" Click="ButtonOk_OnClick"/>
        <Button x:Name="buttonCancel" Content="Отмена" HorizontalAlignment="Left" Height="34" Margin="159,104,0,0" VerticalAlignment="Top" Width="84" Click="ButtonCancel_OnClick"/>

    </Grid>
</Window>
